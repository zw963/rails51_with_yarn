upstream xxxpay_app_server {
  server unix://data_1/www/xxxpay/xxxpay_staging/shared/tmp/puma.app.xxxpay.sock fail_timeout=0;
}

server {
  listen 80;
  server_name *.pay.mymart.test.xthinkapp.com;

  location ~ \.(aspx|php|jsp|cgi)$ {
     return 410;
  }

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_pass http://xxxpay_app_server;
 }

location /assets {
    root /data_1/www/xxxpay/xxxpay_staging/shared/public;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header Access-Control-Allow-Origin *;
 }
}

server {
  listen 80;
  server_name assets.xxxpay.test.xthinkapp.com;

  location / {
    root /data_1/www/xxxpay/xxxpay_staging/shared/public;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header Access-Control-Allow-Origin *;
  }
}
